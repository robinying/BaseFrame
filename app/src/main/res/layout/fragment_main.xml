<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_cl"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:theme="?attr/actionBarStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="基础框架"
        app:titleTextAppearance="@style/ToolbarTitle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.robin.baseframe.widget.SuperButton
                android:id="@+id/bt_dialog"
                android:layout_width="104dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Dialog"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:sCornersRadius="6dp"
                app:sSelectorNormalColor="#3E99D2"
                app:sSelectorPressedColor="#881A4A"
                app:sStrokeColor="@color/black"
                app:sStrokeWidth="1dp"
                app:sUseSelector="true" />

            <com.robin.baseframe.widget.text.DPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="DPTextView"
                android:textSize="12sp"
                app:backgroundColor="@color/colorPrimary"
                app:backgroundPressedColor="#D59A9A"
                app:corner_radius="6dp" />

            <com.robin.baseframe.widget.SuperButton
                android:id="@+id/bt_any_layer"
                style="@style/CommonButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:text="AnyLayer" />


            <com.robin.baseframe.widget.SuperButton
                android:id="@+id/bt_motion"
                style="@style/CommonButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:text="MotionLayout" />

            <com.robin.baseframe.widget.SuperButton
                android:id="@+id/bt_scoped_storage"
                style="@style/CommonButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:text="Scoped Storage" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>